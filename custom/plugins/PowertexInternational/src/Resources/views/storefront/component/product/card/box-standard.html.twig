{% sw_extends '@ComaxxTheme/storefront/component/product/card/box-standard.html.twig' %}

{% set pricesAllowed = false %}

{% if context.currentCustomerGroup.translated.name == 'CustomerGroupAllowed' %}
    {% set pricesAllowed = true %}
{% endif %}

{% block component_product_box_price %}
    {% if pricesAllowed %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block component_product_box_action %}
    {% if pricesAllowed %}
        {{ parent() }}
    {% endif %}
{% endblock %}
