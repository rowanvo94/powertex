{% sw_extends '@Storefront/storefront/block/cms-block-product-heading.html.twig' %}

{% set comaxxDetailNamePlacement = theme_config('comaxx-product-name-placement') %}
{% set comaxxShowManufacturerImage = theme_config('comaxx-show-manufacturer-image') %}

{% block block_product_heading %}
    {% if comaxxDetailNamePlacement == 'above' %}
        {{ parent() }}
    {% endif %}
{% endblock %}

{% block block_product_heading_product_manufacturer_logo_element %}
    {% if comaxxShowManufacturerImage %}
        {{ parent() }}
    {% endif %}
{% endblock %}