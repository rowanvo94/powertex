{% sw_extends '@ComaxxTheme/storefront/component/listing/filter/filter-boolean.html.twig' %}

{% block component_filter_boolean %}
    {% set filterBooleanOptions = {
        name: name,
        displayName: displayName,
        snippets: {
            disabledFilterText: 'listing.disabledFilterTooltip'|trans|sw_sanitize,
            altText: altText,
            altTextActive: altTextActive
        }
    } %}

    {% block component_filter_boolean_panel_item %}
        <div class="filter-toggle-switch filter-boolean filter-panel-item" role="listitem" data-filter-boolean="true" data-filter-boolean-options="{{ filterBooleanOptions|json_encode }}">
            {% block component_filter_boolean_container %}
                <div class="form-check">
                    {% block component_filter_boolean_checkbox %}
                        <input type="checkbox" class="filter-toggle-switch-input filter-boolean-input form-check-input visually-hidden" id="{{ name }}" name="{{ name }}" />
                    {% endblock %}
                    {% block component_filter_boolean_label %}
                        <label for="{{ name }}" class="filter-boolean-label custom-control-label">
                            <span class="filter-toggle-switch-label-holder">
                                {% block component_filter_boolean_display_name %}
                                    {% if altText %}
                                        <span class="filter-toggle-switch-alt-text visually-hidden">{{ altText }}</span>
                                        <span class="filter-toggle-switch-title" aria-hidden="true">{{ displayName }}</span>
                                    {% else %}
                                        <span class="filter-toggle-switch-title">{{ displayName }}</span>
                                    {% endif %}
                                {% endblock %}
                                <span class="filter-toggle-switch-label">
                                    <span class="visually-hidden">{{ displayName }}</span>
                                    <span class="filter-toggle-switch-indicator"></span>
                                </span>
                            </span>
                        </label>
                    {% endblock %}
                </div>
            {% endblock %}
        </div>
    {% endblock %}
{% endblock %}
