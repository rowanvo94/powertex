{% sw_extends '@Storefront/storefront/element/cms-element-product-listing.html.twig' %}

{% set comaxxProductsSM = theme_config('comaxx-products-per-row-sm') %}
{% set comaxxProductsLG = theme_config('comaxx-products-per-row-lg') %}
{% set comaxxProductsXL = theme_config('comaxx-products-per-row-xl') %}
{% set comaxxProductsSMSidebar = theme_config('comaxx-products-per-row-sm-sidebar') %}
{% set comaxxProductsLGSidebar = theme_config('comaxx-products-per-row-lg-sidebar') %}
{% set comaxxProductsXLSidebar = theme_config('comaxx-products-per-row-xl-sidebar') %}
{% set comaxxUspAfterRows = theme_config('comaxx-show-usp-items-after-every-x-rows') %}

{% set ctaAfterRow = comaxxUspAfterRows %}

{% block element_product_listing %}
    {# @var result \Shopware\Core\Framework\DataAbstractionLayer\Search\EntitySearchResult #}
    {% set searchResult = element.data.listing %}
    {% set listingColumns = comaxxProductsSM ~ ' ' ~ comaxxProductsLG ~ ' ' ~ comaxxProductsXL %}

    {% if section and section.type == 'sidebar' %}
        {% set comaxxProductsSM = comaxxProductsSMSidebar %}
        {% set comaxxProductsLG = comaxxProductsLGSidebar %}
        {% set comaxxProductsXL = comaxxProductsXLSidebar %}
        {% set listingColumns = comaxxProductsSMSidebar ~ ' ' ~ comaxxProductsLGSidebar ~ ' ' ~ comaxxProductsXLSidebar %}
    {% endif %}

    {% set slot = cmsPage.getFirstElementOfType('product-listing') %}

    {% set filterUrl = null %}
    {% set dataUrl = null %}

    {% if searchResult.currentFilters.navigationId %}
        {% set filterUrl = path('frontend.cms.navigation.filter', { navigationId: searchResult.currentFilters.navigationId }) %}
        {% set dataUrl = path('frontend.cms.navigation.page', { navigationId: searchResult.currentFilters.navigationId }) %}
    {% endif %}

    {% set sidebar = sectionType == 'sidebar' %}
    {% set params = { slots: slot.id, 'no-aggregations': 1 } %}

    {% block element_product_listing_wrapper %}
        {% sw_include '@Storefront/storefront/component/product/listing.html.twig' with {
            searchResult: searchResult,
            dataUrl: dataUrl,
            filterUrl: filterUrl,
            params: params,
            sidebar: sidebar,
            boxLayout: element.translated.config.boxLayout.value,
            displayMode: element.translated.config.displayMode.value,
            listingColumns: listingColumns
        } %}
    {% endblock %}
{% endblock %}
